<%= form_tag({controller: 'articles', action: 'search'}, method: 'get') do %>
    <div class="row collapse">
	    <div class="small-9 columns">
	      <%= text_field_tag :search, params[:search], :id => 'search_field', :placeholder => "Search..." %>
	    </div>
	    <div class="small-3 columns">
	      <%= submit_tag "Search", :name => nil, :class => "small button postfix" %> 
	    </div>
	</div>
<% end %>
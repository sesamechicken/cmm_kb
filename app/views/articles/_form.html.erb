<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation" class="alert-box alert">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, {cols: 40, rows: 5} %>
  </div>
  <div class="field">
    <%= f.label :public %>
    <%= f.check_box :public %>
  </div>
  
  <div class="field">
    <%= f.label :tags %> <span>Comma separated (e.g. <em>intranet, salesorder, updating</em>)</span>
    <%= f.text_field :tags, {class: "large-3 columns"} %>

  </div>
  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "small button" %>
  </div>
<% end %>

<div class="row">
  <h1>Knowledgebase Articles</h1>
</div>

<% @articles.each do |article| %>
<div class="row panel">
  <div class="large-2 columns center"><img src="http://placekitten.com/g/300/300" class="user-avatar" /></div>
  <div class="large-10 columns">
    <h1><%= link_to article.title, article %></h1>
    <div class="article-meta">Category: <%= link_to article.category, category_path(article.category) %> | Created by: <em><%= article.author %></em> | Last updated: <%= article.updated_at %></div>
    <div class="article-body"><%= truncate(article.body, length: 100) %></div>
  </div>
</div>

<% end %>
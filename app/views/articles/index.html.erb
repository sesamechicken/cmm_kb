<div class="row">
<h1>Knowledgebase Articles</h1>
<%= link_to 'New Article', new_article_path, class: 'tiny button' %>
<%= link_to 'New Category', new_category_path, class: 'tiny button' %>
</div>

<div class="large-2 columns">
categories
</div>

<div class="large-10 columns">
<% @articles.each do |article| %>

<div class="row panel">
  <div class="large-2 columns center"><img src="http://placekitten.com/g/300/300" class="user-avatar" /></div>
  <div class="large-10 columns">
    <h1><%= article.title %></h1>
    <div>Category: <%= link_to article.category, category_path(article.category) %> | Created by: <em><%= article.author %></em> | Last updated: <%= article.updated_at %></div>
    <p><%= truncate(article.body, length: 100) %></p>
    <div class="article-controls"><%= link_to 'Edit', edit_article_path(article), class: 'tiny button' %> <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'tiny alert button' %></div>
  </div>
</div>

<% end %>

</div>

